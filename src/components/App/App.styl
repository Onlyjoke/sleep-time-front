@import './../../variables.styl'

.root
    height: 100%
    width: 100%
    max-width: 100%
    padding: 0 $xs
    margin: 0 auto
    text-align: center
    display: flex
    justify-content: center
    transition: all .3s ease-in-out

.b-container
    display: flex
    justify-content: center

.saveTime
    width: 30%
    margin-top: 40px

.table
    display: flex
    flex-direction: column

.table__row
    width: 100%
    display: flex
    margin-bottom: 10px
    justify-content: space-between

.table__cell
    width: 40%
    border: 1px solid #e5e5e5
    padding: 7px

.saveTime__btn
    margin-bottom: 40px
    border-radius: 10px
    padding: 20px
    color: #fff
    text-align: center
    font-size: 18px
    cursor: pointer

.saveTime__wokeup
    background: #1c78d2

.saveTime__gotosleep
    background: #8A2BE2

.saveTime__topoop
    background: #8B4513

.table__cell_type_hidden
    display: none

.table__cell_btn_delete
    width: 10%
    border-radius: 10px
    background: $dark_red
    color: #fff
    border: none
    padding: 9px
    cursor: pointer

.today
    color: #fff
    margin: 40px 0

@media screen and (max-width: 720px)
    .saveTime
        width: 100%

// modifiers

.table__type_today
    display: none

.table__type_today_show
    display: table

.table__type_all_hide
    display: none

.root_type_day
    background: #03a9f4

    .table__cell
        border-color: #fff
        color: #fff

.root_type_night
    background: #1f263b

    .table__cell
        color: #c7c7c7
